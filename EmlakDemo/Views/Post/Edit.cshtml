@model EntityLayer.Concrete.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<h4>İlan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label class="control-label">Kategori ID</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryID"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Balcony" /> Balkon
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">kat Sayısı</label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Oda Sayısı</label>
                <input asp-for="RoomCount" class="form-control" />
                <span asp-validation-for="RoomCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bina Yaşı</label>
                <input asp-for="BuildingAge" class="form-control" />
                <span asp-validation-for="BuildingAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="InSite" /> Site
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasFurniture" /> Eşyalı
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Banyo Sayısı</label>
                <input asp-for="BathroomCount" class="form-control" />
                <span asp-validation-for="BathroomCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Metrekare</label>
                <input asp-for="SquareMeters" class="form-control" />
                <span asp-validation-for="SquareMeters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">İlan Tarihi</label>
                <input asp-for="PostDate" class="form-control" />
                <span asp-validation-for="PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Vacancy" /> @Html.DisplayNameFor(model => model.Vacancy)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Isıtma</label>
                <input asp-for="HeatId" class="form-control" />
                <span asp-validation-for="HeatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fiyat</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Eski Fiyat</label>
                <input asp-for="OldPrice" class="form-control" />
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Gösterim Sayısı</label>
                <input asp-for="Viewing" class="form-control" />
                <span asp-validation-for="Viewing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">İlan Açıklaması</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">İlan Başlığı</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Listeye dön</a>
</div>

