<script>
    $('#btnLogin').click(function () {
        var password = $('#password').val();
        var userName = $('#username').val();

        $.ajax({
            url: "/Home/Login",
            type: "POST",
            dataType: "json",
            data: { password: password, username: userName },
            success: function (data) {
                if (data.result == 1)
                    alert(data.message);
                else
                    alert("Başarısız!");
            }
        });
    });
</script>